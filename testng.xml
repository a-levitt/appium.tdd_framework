<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Test Suite" parallel="tests"> <!-- parallel="tests" -->
    <test name="Test virtual Android">
        <listeners>
            <listener class-name="com.qa.listeners.TestListener"/>
        </listeners>
        <parameter name="emulator" value="true"/>
        <parameter name="platformName" value="Android" />
        <parameter name="platformVersion" value="13" />
        <parameter name="udid" value="emulator-5554" />
        <parameter name="deviceName" value="Pixel 8 virt" />
        <parameter name="systemPort" value="10000" />
        <!--<parameter name="chromeDriverPort" value="11000" /> for webview apps-->
        <classes>
             <class name="com.qa.tests.LoginTests"/>
             <!-- <class name="com.qa.tests.LoginTests">
                 <methods>
                     <include name="testUserNameNegative"/>
                 </methods>
             </class> -->
            <class name="com.qa.tests.ProductsTests"/>
        </classes>
    </test>
    <test name="Test physical Android">
        <listeners>
            <listener class-name="com.qa.listeners.TestListener"/>
        </listeners>
        <parameter name="emulator" value="false"/>
        <parameter name="platformName" value="Android" />
        <!--<parameter name="platformName" value="iOS" /> for iOS-->
<!--        <parameter name="platformVersion" value="13" />-->
        <parameter name="udid" value="6985f47b" />
        <parameter name="deviceName" value="Redmi Note 10 Pro" />
        <parameter name="systemPort" value="10001" />
        <!--<parameter name="wdaLocalPort" value="10002" /> for iOS-->
        <!--<parameter name="webkitDebugProxyPort" value="10003" /> for iOS-->
        <classes>
            <class name="com.qa.tests.LoginTests"/>
            <class name="com.qa.tests.ProductsTests"/>
        </classes>
    </test>
</suite>